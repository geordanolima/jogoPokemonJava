<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cor_input"
        android:gravity="top|bottom"
        android:orientation="vertical"
        android:padding="@dimen/tamanho_texto">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/background_light"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cadastroParte2NomeId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/tamanho_texto"
                android:text="@string/texto_nome_jogador"
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/tamanho_texto2" />

            <TextView
                android:id="@+id/cadastroParte2ApelidoId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/tamanho_texto"
                android:text="@string/texto_apelido"
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/tamanho_texto2" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/tamanho_texto"
            android:text="@string/texto_subtitulo1"
            android:textColor="@android:color/background_dark" />

    <ListView
        android:id="@+id/listCriatura"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/tamanho_texto"
            android:text="@string/texto_escolha_itens"
            android:textColor="@android:color/background_dark" />

        <Button
            android:id="@+id/botaoFinalizaCadastroId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_bright"
            android:text="@string/texto_avancar" />

    </LinearLayout>

